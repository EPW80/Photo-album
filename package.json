{
  "name": "photo-album",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && npm run build:css && npm run copy-public",
    "build:css": "postcss src/styles/tailwind.css -o dist/styles/tailwind.css",
    "copy-public": "copyfiles 'public/**/*' dist/",
    "start": "node dist/app.js",
    "start:dev": "ts-node src/app.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'npm run build && node dist/app.js'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "express": "^4.22.1",
    "typescript": "^5.9.3",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.19",
    "tailwindcss": "^3.4.6",
    "copyfiles": "^2.4.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.json": [
      "prettier --write"
    ]
  }
}
